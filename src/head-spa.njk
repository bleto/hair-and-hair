---
pagination:
  data: translations.locales
  size: 1
  alias: locale
permalink: "{% if locale == 'en' %}/en/head-spa/{% else %}/head-spa/{% endif %}"
layout: layout.njk
eleventyComputed:
  title: "{{ 'headSpa.title' | t(locale) }}"
  description: "{{ 'headSpa.description' | t(locale) }}"
---

<!--Page Header Start-->
<section class="page-header">
    <div class="page-header__bg" style="background-image: url(/assets/images/backgrounds/headSpa.jpg);">
    </div>
    <div class="container">
        <div class="page-header__inner">
            <ul class="thm-breadcrumb list-unstyled">
                <li>
                    <a href="{% if locale == 'en' %}/en/{% else %}/{% endif %}">{{ 'headSpa.breadcrumb.home' | t(locale) }}</a>
                </li>
                <li><span>/</span></li>
                <li>{{ 'headSpa.breadcrumb.current' | t(locale) }}</li>
            </ul>
            <h1 style="color: #fff">{{ 'headSpa.title' | t(locale) }}</h1>
        </div>
    </div> 
</section>
<!--Page Header End-->

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "{{ 'headSpa.faq.q1' | t(locale) }}",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "{{ 'headSpa.faq.a1' | t(locale) }}"
      }
    },
    {
      "@type": "Question",
      "name": "{{ 'headSpa.faq.q2' | t(locale) }}",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "{{ 'headSpa.faq.a2' | t(locale) }}"
      }
    },
    {
      "@type": "Question",
      "name": "{{ 'headSpa.faq.q3' | t(locale) }}",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "{{ 'headSpa.faq.a3' | t(locale) }}"
      }
    }
  ]
}
</script>

<!--Client Issues Start-->
<section class="client-issues">
    <div class="container">
        <div class="row">
            <div class="col-xl-6 col-lg-6">
                <div class="client-issues__left">
                    <div class="client-issues__img-box">
                        <div class="client-issues__img">
                            <img src="/assets/images/resources/head_spa2.jpg" alt="{{ 'headSpa.imageAlt' | t(locale) }}">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6">
                <div class="client-issues__right">
                    <div class="section-title text-left">
                        <span class="section-title__tagline">{{ 'headSpa.data.subtitle' | t(locale) }}</span>
                        <h2 class="section-title__title">{{ 'headSpa.data.title' | t(locale) }}</h2>
                    </div>
                    <p class="client-issues__text">{{ 'headSpa.data.description' | t(locale) | safe  }}</p>
                    <ul class="client-issues__points list-unstyled">
                        <li>
                            <div class="icon">
                                <span class="fa fa-check"></span>
                            </div>
                            <div class="text">
                                <p>{{ 'headSpa.data.list.point1' | t(locale) }}</p>
                            </div>
                        </li>
                        <li>
                            <div class="icon">
                                <span class="fa fa-check"></span>
                            </div>
                            <div class="text">
                                <p>{{ 'headSpa.data.list.point2' | t(locale) }}</p>
                            </div>
                        </li>
                        <li>
                            <div class="icon">
                                <span class="fa fa-check"></span>
                            </div>
                            <div class="text">
                                <p>{{ 'headSpa.data.list.point3' | t(locale) }}</p>
                            </div>
                        </li>
                        <li>
                            <div class="icon">
                                <span class="fa fa-check"></span>
                            </div>
                            <div class="text">
                                <p>{{ 'headSpa.data.list.point4' | t(locale) }}</p>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Client Issues End-->

<section class="faq-cta">
    <div class="container">
        <div class="faq-cta__inner text-center">
            <div class="section-title text-center">
                <span class="section-title__tagline">{{ 'headSpa.faqCta.subtitle' | t(locale) }}</span>
                <h2 class="section-title__title">{{ 'headSpa.faqCta.title' | t(locale) }}</h2>
                <p class="section-title__text">{{ 'headSpa.faqCta.text' | t(locale) }}</p>
            </div>
            <a href="{% if locale == 'en' %}/en/faq/#faq-head-spa{% else %}/faq/#faq-head-spa{% endif %}" class="thm-btn">{{ 'headSpa.faqCta.link' | t(locale) }}</a>
        </div>
    </div>
</section>
