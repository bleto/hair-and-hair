<header class="main-header">
  <div class="main-header__top">
    <div class="main-header__top-wrapper">
      <div class="main-header__top-inner">
        <div class="main-header__top-left">
          <ul class="list-unstyled main-header__contact-list">
            <li>
              <div class="icon"><i class="fas fa-envelope"></i></div>
              <div class="text"><p><a href="mailto:{{ site.email }}">{{ site.email }}</a></p></div>
            </li>
            <li>
              <div class="icon"><i class="fas fa-phone"></i></div>
              <div class="text"><p><a href="tel:{{ site.phone }}">+48 {{ site.phone }}</a></p></div>
            </li>
          </ul>
        </div>
        <div class="main-header__top-right">
          <div class="main-header__social">
            <a href="{{ site.links.facebook }}"><i class="fab fa-facebook"></i></a>
            <a href="{{ site.links.instagram }}"><i class="fab fa-instagram"></i></a>
          </div>
          <div class="main-header__language-switcher">
            <a href="{{ page.url | alternateUrl('pl') }}" class="{% if locale == 'pl' or not locale %}active{% endif %}" title="Polski">PL</a>
            <span class="separator">|</span>
            <a href="{{ page.url | alternateUrl('en') }}" class="{% if locale == 'en' %}active{% endif %}" title="English">EN</a>
          </div>
          <div class="main-header__btn-box">
            <a href="booksy" class="thm-btn main-header__btn">{{ 'header.bookNow' | t(locale) }}</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <nav class="main-menu">
    <div class="main-menu__wrapper">
      <div class="main-menu__wrapper-inner">
        <div class="main-menu__left">
          <div class="main-menu__logo">
            <a href="/" title="Hair & Hair - Strona główna"><img src="/assets/images/logo/logo_side.svg" alt="Hair & Hair - Gabinet Trychologiczny"></a>
          </div>
        </div>

        <div class="main-menu__main-menu-box">
          <a href="#" class="mobile-nav__toggler"><i class="fa fa-bars"></i></a>
          <ul class="main-menu__list" data-locale="{{ locale }}">
            <li class="{% if (page.url == '/' and locale == 'pl') or (page.url == '/en/' and locale == 'en') %}current{% endif %}">
              <a href="/" data-route="home">{{ 'nav.home' | t(locale) }}</a>
            </li>
            <li class="dropdown {% if '/services' in page.url or '/en/services' in page.url %}current{% endif %}">
              <a href="#">{{ 'nav.trichology' | t(locale) }}</a>
              <ul>
                <li class="{% if page.url == '/services-consultations/' or page.url == '/en/services-consultations/' %}current{% endif %}">
                  <a href="/services-consultations/" data-route="services-consultations">{{ 'nav.treatments' | t(locale) }}</a>
                </li>
                <li class="{% if page.url == '/services-treatments/' or page.url == '/en/services-treatments/' %}current{% endif %}">
                  <a href="/services-treatments/" data-route="services-treatments">{{ 'nav.consultations' | t(locale) }}</a>
                </li>
              </ul>
            </li>
            <li class="{% if page.url == '/head-spa/' or page.url == '/en/head-spa/' %}current{% endif %}">
              <a href="/head-spa/" data-route="head-spa">{{ 'nav.headSpa' | t(locale) }}</a>
            </li>
            <li class="{% if page.url == '/training/' or page.url == '/en/training/' %}current{% endif %}">
              <a href="/training/" data-route="training">{{ 'nav.training' | t(locale) }}</a>
            </li>
            <li class="{% if '/contact' in page.url %}current{% endif %}">
              <a href="/contact/" data-route="contact">{{ 'nav.contact' | t(locale) }}</a>
            </li>
          </ul>
        </div>

        <div class="main-menu__right"></div>
      </div>
    </div>
  </nav>
</header>

<div class="stricky-header stricked-menu main-menu">
  <div class="sticky-header__content"></div>
</div>