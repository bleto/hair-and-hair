<!-- Booksy iframe handler -->
<script type="module">
  import { createWidgetContainer, createIframe } from '/assets/js/booksy.js';
  
  // Inicjalizuj Booksy tylko na stronie booking
  if (window.location.pathname.includes('/booking')) {
    const iframeData = {
      id: 96326,
      lang: window.location.pathname.includes('/en/booking') ? 'en' : 'pl',
      country: 'pl',
      mode: 'inline',
      theme: 'default',
    };
    
    const iframeSrc =
      'https://booksy.com/widget/index.html?id=' +
      iframeData.id +
      '&lang=' +
      iframeData.lang +
      '&country=' +
      iframeData.country +
      '&mode=' +
      iframeData.mode +
      '&theme=' +
      iframeData.theme;
    
    // Poczekaj aż DOM będzie gotowy
    document.addEventListener('DOMContentLoaded', function() {
      const container = document.querySelector('.iframeContainer');
      if (container) {
        const widgetContainer = createWidgetContainer(iframeData);
        createIframe(widgetContainer, iframeSrc);
      }
    });
  }
</script>

